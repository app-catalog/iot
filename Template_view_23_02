    <div class="container">
        <div class="page-header">
            <h1>{foaf:name}</h1>
            <span property="foaf:name" content="?name"></span>
            <span property="foaf:mbox" content="?email"></span>
        </div>
        
        <p>      
            Informações de localização:
        </p>
        <ul>
            <li id="City" rel="dul:hasLocation" resource="?City">
                <a  href="?City" target="_blank">{rdfs:label}</a>
                <p>{rdfs:comment}</p>
             </li>
            
        </ul>
    </div>
